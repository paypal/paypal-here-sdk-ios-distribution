<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/sdk_alert_dialog_layout_padding"
              android:orientation="vertical"
              android:minHeight="200dip"
              android:background="@color/sdk_default_bg"
              android:keepScreenOn="true"
              android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sdk_default_text_color"
        android:textSize="@dimen/sdk_alert_dialog_text_header"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sdk_alert_dialog_layout_padding_top1"
        android:textColor="@color/sdk_dark_grey"
        android:textSize="@dimen/sdk_alert_dialog_text_body"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:layout_marginTop="@dimen/sdk_alert_dialog_layout_padding_top3"
        android:layout_gravity="bottom|center_horizontal"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/sdk_spinner_circle"
        />

</LinearLayout>